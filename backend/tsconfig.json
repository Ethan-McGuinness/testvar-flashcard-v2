{
  "compilerOptions": {
    "target": "ES6", // Target ES6 (or higher) for modern JavaScript features.
    "module": "commonjs", // Use CommonJS module system (default for Node.js).
    "outDir": "./dist", // Output directory for compiled JS files.
    "rootDir": "./src", // Root directory for source TS files.
    "esModuleInterop": true, // Allow importing non-ESM modules.
    "strict": true, // Enable all strict type-checking options.
    "skipLibCheck": true, // Skip type checking of declaration files.#
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"],
    "forceConsistentCasingInFileNames": true 
    // Ensure consistent file casing.
  },
  "include": ["src/**/*.ts", "src/types/restify.d.ts"],  // Ensure types are included
  "exclude": ["node_modules"]
}